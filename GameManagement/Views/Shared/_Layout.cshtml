<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" /> <!-- 自訂樣式 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" rel="stylesheet"> <!-- Bootstrap Icons -->
</head>
<body>

<!-- 最上方的 Header -->
<header class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container-fluid d-flex justify-content-between">
        <!-- LOGO -->
        <div class="d-flex align-items-center">
            <button class="btn btn-outline-dark me-3"><i class="bi bi-list"></i></button>
            <a class="navbar-brand" href="#">系統管理後台</a>
        </div>

        <!-- 右上角的圖示 -->
        <div class="d-flex align-items-center">
            <i class="bi bi-bell fs-4 me-4"></i>
            <i class="bi bi-person fs-4"></i>
        </div>
    </div>
</header>

<!-- 左側導航欄 + 主內容區 -->
<div class="container-fluid">
    <div class="row">
        <!-- 左側的側邊欄 -->
        <nav id="sidebarMenu" class="col-md-2 d-md-block bg-light sidebar">
            <div class="position-sticky">
                <ul class="nav flex-column pt-3">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")" href="#">首頁</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Game" ? "active" : "")" asp-controller="Game" asp-action="Index">遊戲管理</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Player" ? "active" : "")" href="#">玩家系列賬號管理</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Merchant" ? "active" : "")" href="#">商戶管理</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Transaction" ? "active" : "")" href="#">點數和異動管理</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- 主內容區域 -->
        <main class="col-md-10 ms-sm-auto px-md-4">
            @RenderBody() <!-- 渲染子頁面主要內容 -->
        </main>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
